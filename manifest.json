{
  "name": "ScreenShot",
  "version": "2.0.4",
  "manifest_version": 3,
  "description": "ScreenShot Extension",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon-one.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "cookies",
    "externally_connectable",
    "declarativeContent",
    "nativeMessaging",
    "scripting"
  ],
  "host_permissions": [ "<all_urls>" ],
  "externally_connectable": {
      "matches": [ "<all_urls>" ]
  }
  
}